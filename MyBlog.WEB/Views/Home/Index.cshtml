@model List<Blog>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="index.html">Home</a>
    </li>

</ol>
<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Bloglar</h3>
        <div class="inner-sec">
            <!--left-->
            <div class="left-blog-info-w3layouts-agileits text-left">
                <div class="row">
                    @foreach (var item in Model)
                    {


                        <div class="col-lg-4 card">
                            <a href="/Home/BlogDetails/@item.ID">
                                <img src="~/BlogImage/@item.BlogThumbnailImage" class="card-img-top img-fluid" alt="">
                            </a>
                            <div class="card-body">
                                <ul class="blog-icons my-1">
                                    <li>
                                        <a>                                          
                                            <i class="fa fa-user"></i> @item.BlogWriterName
                                        </a>
                                    </li>
                                    <li >
                                        <a>
                                            <i class="far fa-calendar-alt"></i> @(((DateTime)item.CreatedDate).ToString("dd-MMM-yyyy"))
                                        </a>
                                    </li>
                                    <li>
                                        <a>
                                            <i class="fa fa-list-alt"></i> @item.Category.CategoryName
                                        </a>
                                    </li>

                                </ul>
                                <h5 class="card-title">
                                    <a href="single.html">@item.BlogTitle</a>
                                </h5>
                                <p class="card-text mb-3">@item.BlogContent.Substring(0,item.BlogContent.Substring(0,130).LastIndexOf(" "))... </p>
                                <a href="/Home/BlogDetails/@item.ID" class="btn btn-primary read-m">Read More</a>
                            </div>
                        </div>
                    }

                </div>
                <!--//left-->
            </div>
        </div>
    </div>
</section>

