@model List<Blog>

<div class="tech-btm">
    <h3>Latest Posts</h3>

    @foreach (var item in Model)
    {
        <div class="blog-grids row mb-3">
            <div class="col-md-5 blog-grid-left">
                <a href="/Home/BlogDetails/@item.ID">
                    <img src="~/BlogImage/@item.BlogThumbnailImage" alt="">
                </a>
            </div>
            <div class="col-md-7 blog-grid-right">

                <h5>
                    <a href="/Home/BlogDetails/@item.ID">@item.BlogTitle </a>
                </h5>
                <div class="sub-meta">
                    <span>
                        <i class="far fa-clock"></i> @(((DateTime)item.CreatedDate).ToString("dd-MMM-yyyy"))
                    </span>
                </div>
            </div>

        </div>

    }

</div>