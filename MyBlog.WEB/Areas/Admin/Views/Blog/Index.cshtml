@model List<Blog>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Blog List</h3>

                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <a asp-action="Create" asp-controller="Blog" asp-area="Admin" class="btn btn-success">New Blog</a>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Blog Title</th>
                            <th>Created Date</th>
                            <th>Category</th>
                            <th>Durum</th>
                         
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            if (Model.Count > 0)
                            {
                                foreach (var blog in Model)
                                {
                                    <tr>
                                        <td>@blog.ID</td>
                                        <td>@blog.BlogTitle</td>
                                        <td>@blog.CreatedDate</td>                                       
                                        <td>@blog.CategoryID</td>
                                        
                                        <td>
                                            <a asp-action="Update" asp-controller="Blog" asp-route-id="@blog.ID" class="btn btn-xs btn-warning">update</a>
                                            <a asp-action="Delete" asp-controller="Blog" asp-route-id="@blog.ID" class="btn btn-xs btn-danger">delete</a>
                                        </td>
                                    </tr>
                                }
                            }


                        }

                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>

